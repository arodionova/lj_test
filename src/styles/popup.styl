.popup {
	height: 95%;
	padding-right: 1.7em;

	&--content {
		position: relative;
		display: inline-block;
		vertical-align: middle;

		&:after {
			content: "";
			position: absolute;
			top: @padding-right;
			left: @top;
			width: 100%;
			height: 100%;
			z-index: -1;

			background: #CC0000;
			border-radius: 1.3em;
		}

		&:before {
			content: "";
			position: absolute;
			width: 2.5em;
			height: @width;
			bottom: -(@width/2);
			right: -(@width/2);

			background: #CC0000;
			border-radius: 100%;
		}
	}
}

@media screen and (min-width: 400px) {
	.popup {
		&:before {
			content: "";
			display: inline-block;
			height: 100%;
			width: 0;
			vertical-align: middle;
		}
	}
}