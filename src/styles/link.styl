a,
.link {
	color: #CC0000;
	text-decoration: none;
	box-shadow: inset 0 -1px @color;

	&:hover {
		box-shadow: none;
	}

	&:active,
	&:visited {
		color: #800000;
	}
}

.link {
	&-external {
		white-space: nowrap;

		&:after {
			content: "";
			display: inline-block;
			width: .7em;
			height: .7em;
			margin-left: .1em;
			background: url(../images/link.png);
			background-size: 100% auto;
		}
	}
}